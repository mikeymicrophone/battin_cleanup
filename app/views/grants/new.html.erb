<h1>authorize <%= @grant.user.name + ' ' if @grant.user %>to help manage <%= @grant.scope.name if @grant.scope %></h1>

<% form_for(@grant) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :permission_id %>

	<% if @grant.scope %>
	  these users are authorized currently:<br>
	  <% @grant.scope.users.each do |u| %>
		  <%= link_to_name u %><br>
	  <% end %>
	<% end %>

  <p>
    <%= f.select :user_id, @users %>
  </p>
  <%= f.hidden_field :scope_type %>
  <%= f.hidden_field :scope_id %>
  <p>
    <%= f.submit "permit" %>
  </p>
<% end %>

<%= link_to 'existing permissions', grants_path %>
