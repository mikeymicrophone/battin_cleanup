<h1>Listing grants</h1>

<table>
  <tr>
    <th>Permission</th>
    <th>User</th>
    <th>Scope type</th>
    <th>Scope</th>
  </tr>

<% for grant in @grants %>
  <tr>
    <td><%=h grant.permission_id %></td>
    <td><%=h grant.user_id %></td>
    <td><%=h grant.scope_type %></td>
    <td><%=h grant.scope_id %></td>
    <td><%= link_to 'Show', grant %></td>
    <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
    <td><%= link_to 'Destroy', grant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New grant', new_grant_path %>
